float x=0;         //initial x position
float y=0;         //initial y position
float v0=100;        //projectile initial speed;
float alpha=PI/4;   //angle

float xSpeed,ySpeed;  //speed of projectile in both axis

// resistive forces are negative
float gravity = -9.8;
float wind = -2;    

void setup() {

//project velocity on both axis
  xSpeed = v0 * cos(alpha);
  ySpeed = v0 * sin(alpha);

}

void loop() {
//update positions
  x = x + xSpeed;
  y = y + ySpeed;

//aply resistive forces
  xSpeed += wind;
  ySpeed += gravity;

}
